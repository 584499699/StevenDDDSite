@model Article
@{
    ViewBag.Title = Model.Title;
}
<div class="row">
    <div class="col-lg-10 col-lg-offset-1">
        <div class="ibox">
            <div class="ibox-content">
                <div class="text-center article-title">
                    <h1>
                        @Model.Title
                    </h1>
                    <span class="text-muted"><i class="fa fa-clock-o"></i> @Model.ArticleDateTime.ToDisplayDateTime()</span>
                </div>
                @Html.Raw(Model.ArticleContent)
                <hr>
                <div class="row">
                    <div class="col-md-6">
                        <h5>分类:</h5>
                        <button class="btn btn-primary btn-xs" type="button">@Model.ClassifyName</button>
                    </div>
                    <div class="col-md-6">
                        <div class="small text-right">
                            <h5>阅读量:</h5>
                            <i class="fa fa-eye"> </i> @Model.ViewCount 次
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
