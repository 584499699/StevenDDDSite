@model SysCase
@{
    var configRep = DependencyResolver.Current.GetService<ISysConfigRepository>();
    ViewBag.Title = Model.Name + "_案例_" + configRep.CompanyName;
    Layout = null;
}

<!doctype html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <!-- Mobile -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-touch-fullscreen" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="format-detection" content="telephone=no">
    <meta name="format-detection" content="address=no">
    <meta name="Keywords" content="show">
    <meta name="description" content="show">

    <title>@ViewBag.Title</title>


    <!-- 页面样式 -->
    <link rel="stylesheet" type="text/css" href="/Res/global/style/global.css">

    <style type="text/css">
        html, body {
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        .previewTop {
            position: relative;
            background-color: #000;
            padding: 0 20px;
            width: 100%;
            z-index: 1;
            box-sizing: border-box;
        }


            .previewTop .logo {
                float: left;
                width: 100px;
                height: 25px;
                padding-top: 5px;
            }

                .previewTop .logo img {
                    padding-top: 0px;
                }

            .previewTop .close {
                position: absolute;
                right: 20px;
                top: 8px;
                z-index: 100;
                width: 20px;
                height: 20px;
            }

            .previewTop .middle {
                margin: 0 auto;
                width: 150px;
            }

                .previewTop .middle ul {
                    margin: 0;
                    padding: 0;
                    text-align: center;
                }

                    .previewTop .middle ul li {
                        display: inline-block;
                        list-style: none;
                    }

                        .previewTop .middle ul li a {
                            width: 30px;
                            height: 30px;
                            min-height: 30px;
                            display: inline-block;
                            text-align: center;
                        }

            .previewTop div ul li a:hover {
                background-color: rgba(128,128,128,1);
            }

            .previewTop div ul li a.cur{
            background-color: rgba(128,128,128,1);
        }

        .clear {
            clear: both;
        }

        .previewContentDiv {
            width: 100%;
            height: 100%;
            position: relative;
            z-index: 0;
            margin: 0 auto;
        }

        #previewContent {
            position: absolute;
            width: 100%;
            height: 99%;
            border: none;
        }

            #previewContent.c-mobile {
                top: 50%;
                height: 593px;
                margin-top: -297px;
            }
    </style>
</head>
<body>




    <!-- 主体 -->
    <div class="previewTop clearfix">
        <div class="logo"><a href="@Url.Home()"><img src="/Res/home/index/images/logo-show.png" alt=""></a></div>
        <div class="middle">
            <ul class="clearfix">
                <li>
                    <a href="#" class="screenMedia desktop cur" data-toggle="tooltip" data-placement="auto bottom" title="" data-template="T/components/tooltip.js" data-original-title="Desktop">
                        <img src="/Res/home/index/images/icon-com.png" alt="">
                    </a>
                </li>
                <li>
                    <a href="#" class="screenMedia tablet" data-toggle="tooltip" data-placement="auto bottom" title="" data-template="T/components/tooltip.js" data-original-title="Tablet">
                        <img src="/Res/home/index/images/icon-ipad.png" alt="">
                    </a>
                </li>
                <li>
                    <a href="#" class="screenMedia mobile" data-toggle="tooltip" data-placement="auto bottom" title="" data-template="T/components/tooltip.js" data-original-title="Mobile">
                        <img src="/Res/home/index/images/icon-tels.png" alt="">
                    </a>
                </li>

            </ul>
        </div>

        @*<div class="close">
                <a href="#" class="c-close"><img src="/Res/home/index/images/icon-close.png" alt=""> </a>
            </div>*@
    </div>
    <div class="previewContentDiv">
        <iframe id="previewContent" src="@Model.CaseUrl"></iframe>
    </div>
    <!-- 主体 end -->
    <!-- 脚本 -->
    <script src="/Res/global/js/lib/jquery/jquery-3.1.1.min.js"></script>

    <script type="text/javascript">
        $(".previewTop div ul li a").click(function () {
            $(this).css('background-color', '#8f8f8f').parent().siblings().children('a').css('background-color', '#000');
            if ($(this).hasClass('desktop')) {
                $('.previewContentDiv').css('width', '100%');
                $('#previewContent').attr('class', 'c-desktop');
            }
            if ($(this).hasClass('tablet')) {
                $('.previewContentDiv').width(768);
                $('#previewContent').attr('class', 'c-tablet');
            }
            if ($(this).hasClass('mobile')) {
                $('.previewContentDiv').width(370);
                $('#previewContent').attr('class', 'c-mobile');
            }
        });
        $('.close').on('click', function () {
            $(this).closest('.previewTop').remove();
            $('.previewContentDiv').css('margin-top', 0);
            return false;
        });
    </script>
</body>
</html>
